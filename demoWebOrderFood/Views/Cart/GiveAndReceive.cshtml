@model IEnumerable<Model1.ViewModel.CartViewModel>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var session = (UserLogin)Session[demoWebOrderFood.Common.CommonConstants.USER_SESSION];
}
<div class="main-body">
    <div class="row gutters-sm">

        @foreach (var item in Model)
        {
            if (item.Status == true)
            {
                <div class="col-md-12 mt-3">

                    <div class="card mt-3 mb-3">
                        <div class="row" id="disable">
                            <div class="col-sm-3">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <div class="mt-3">
                                            <h4 style="font-size: 30px;">@Html.DisplayFor(modelItem => item.ProName)</h4>
                                            <p class="text-muted font-size-sm">@Html.DisplayFor(modelItem => item.CreatedDate) <br /> </p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-body col-sm-9">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0" style="font-size: 16px">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-size: 16px">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </div>
                                    <div class="col-sm-3">
                                        <h6 class="mb-0" style="font-size: 16px">Created By</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-size: 16px">
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12 text-secondary" style="display: flex">
                                        <div id="countdown" class="mr-auto" style="font-size: 16px" data-days="1" data-hrs="16" data-mins="0" data-secs="5"></div>
                                        <a class=" btn__receive font-size-sm mr-2">waiting for confirmation</a>

                                        <button type="button" class=" btn__receive " style="background-color: #fff; border: 1px solid #000">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-12 mt-3">
                    <div class="card mt-3 mb-3">
                        <div class="row" id="disable">
                            <div class="col-sm-3">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <div class="mt-3">
                                            <h4 style="font-size: 30px;">@Html.DisplayFor(modelItem => item.ProName)</h4>
                                            <p class="text-muted font-size-sm">@Html.DisplayFor(modelItem => item.CreatedDate) <br /> </p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-body col-sm-9">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0" style="font-size: 16px">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-size: 16px">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </div>
                                    <div class="col-sm-3">
                                        <h6 class="mb-0" style="font-size: 16px">Created By</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary" style="font-size: 16px">
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12 text-secondary" style="display: flex">
                                        <div id="countdown" class="mr-auto" style="font-size: 16px" data-days="1" data-hrs="16" data-mins="0" data-secs="5"></div>
                                        <a class=" btn__receive font-size-sm mr-2">Was given</a>
                                        <button type="button" class=" btn__receive " style="background-color: #fff; border: 1px solid #000">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }





        }



        <div>







        </div>
    </div>

</div>








