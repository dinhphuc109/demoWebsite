@model List<Model1.ViewModel.CartViewModel>
@{
    ViewBag.Title = "ListViewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var session = (UserLogin)Session[demoWebOrderFood.Common.CommonConstants.USER_SESSION];
}

@using (Html.BeginForm("Search", "Cart", FormMethod.Get))
{
    if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            if (session.UserName == item.UsName)
            {
                <div class="col-md-8">
                    <div class="card mb-3" id="disable">
                        <div class="card-body">
                            <nav aria-label="breadcrumb" class="main-breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">@Model.Count</li>
                                </ol>
                            </nav>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.UsName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-9 text-secondary">
                                    <div id="countdown" data-days="0" data-hrs="0" data-mins="1" data-secs="5"></div>
                                    <div class="btn__receive" onclick="alert('Gave')">
                                        <button id="btnGive" class="btn">Give</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                    
                </div>
            }
            else
            {
<div class="col-md-8">
    <div class="card mb-3" id="disable">
        <div class="card-body">
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">@Model.Count</li>
                </ol>
            </nav>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @item.UsName
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-9 text-secondary">
                    <div id="countdown" data-days="0" data-hrs="0" data-mins="1" data-secs="5"></div>
                    <div class="btn__receive" onclick="alert('Gave')">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
            }
        }

    }
