@model List<demoWebOrderFood.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/client/js/controller/_Cartcontroller.js"></script>
}
<style>
    .btn__receive{
        color: #fff !important;
        font-size: 16px;
        width: 100px;
    }
</style>
<div class="main-body">
    <div class="row gutters-sm">
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
               
                <div class="col l-5 mb-5 d-flex flex-column align-items-center text-center justify-content-center">
                    <div class="card col-mb-12 " id="disable" style="left: 65%">
                        <div class="card-body">   
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-body">
                                        <div class="d-flex flex-column align-items-center text-center ">
                                           
                                            <img src="@item.Product.Image" alt="@item.Product.Name" class="rounded-circle" width="150">
                                            <div class="mt-3">
                                                <h4 style="font-size: 30px;">@item.Product.Name</h4>
                                                <p class="text-muted" style="font-size: 20px;">@item.Product.Description <br /> </p>
                                                <h4 style="font-size: 18px; margin-top: 4px;">This month remain: 3/3</h4>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-12 text-secondary mt-3" style="display: flex; justify-content: center">
                                    <button type="button" id="btnContinue" class=" btn__receive  mr-2 font-size-sm">Continue</button>
                                    @using (Html.BeginForm("GiveAndReceive", "Cart", FormMethod.Post))
                                    {

                                        <button type="submit" class="btn__receive font-size-sm mr-2" >Receive</button>
                                    }
                                    <button type="button" data-id="@item.Product.ID" class=" btn__receive btn-delete">Delete</button>

                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
    <div class="noProduct" style="position: relative; top: 50%; left: 37%">
        <img src="~/Assets/client/images/no-cart-edit.png" style="width: 320px; height: 200px " />
        <h1 style=" font-size: 22px; color: #fff; text-align: center; margin: 20px 0;">No products</h1>
    </div>
        }
                <div>



                    @{
                        var session = (UserLogin)Session[demoWebOrderFood.Common.CommonConstants.USER_SESSION];
                    }



                </div>
            </div>

    </div>